# FROM node:22.15-alpine
# WORKDIR /app
# COPY package.json /app
# RUN npm install
# COPY . /app
# CMD ["node","app.js"]

#Build stage
FROM node:22.15-alpine AS build

WORKDIR /app

COPY package*.json .

RUN npm install

COPY . .

RUN npm run build

#Production stage
FROM node:22.15-alpine AS production

WORKDIR /app

COPY package*.json .

RUN npm ci --only=production

COPY --from=build /app/dist ./dist

CMD ["node", "dist/index.js"]